<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/tapestry">

    <ImageView
        android:src="@drawable/dicerollerapp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/todo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_text"
        android:textSize="56sp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textColor="@color/title_color"/>
    <Button
        android:id="@+id/roll_button"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:textSize="30sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/textButton"
        android:layout_height="50dp"
        android:text="@string/roll_button_text" />
    <Button
        android:id="@+id/initial_button"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="100dp"
        android:textSize="25sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/textButton"
        android:text="@string/initial_button_text"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/result_Imatgeview1"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:src="@drawable/empty_dice"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/result_Imatgeview2"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:src="@drawable/empty_dice"
            android:contentDescription="@string/todo" />
    </LinearLayout>
</LinearLayout>